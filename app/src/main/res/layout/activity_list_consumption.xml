<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paiizz.paiical.activity.ListConsumptionActivity">

    <ProgressBar
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/progressBarConsumption"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="8dp"
        android:layout_y="140dp"
        android:indeterminate="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewConsumption"
        android:layout_x="1dp"
        android:layout_y="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Today,eat 0 Kcal"
        android:id="@+id/textViewTodateat"
        android:layout_x="120dp"
        android:layout_y="30dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/textViewEatfromEnegy"
        android:layout_x="120dp"
        android:layout_y="75dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:text="New Text"
        android:id="@+id/textViewDate"
        android:layout_x="210dp"
        android:layout_y="121dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Consumption of food to day"
        android:id="@+id/textView22"
        android:layout_x="5dp"
        android:layout_y="200dp"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/consumption_recycler"
        android:layout_x="5dp"
        android:layout_y="240dp">
    </android.support.v7.widget.RecyclerView>

</AbsoluteLayout>
