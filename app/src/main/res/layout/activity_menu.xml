<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH MENU"
        android:id="@+id/buttonSearchMenu"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonConsumption"
        android:layout_alignStart="@+id/buttonConsumption" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST CONSUMPTION"
        android:id="@+id/buttonConsumption"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonSearchMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMATION"
        android:id="@+id/buttonInformation"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonConsumption"
        android:layout_alignRight="@+id/buttonSearchMenu"
        android:layout_alignEnd="@+id/buttonSearchMenu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERESTING INFO"
        android:id="@+id/buttonInteresting"
        android:layout_below="@+id/buttonInformation"
        android:layout_alignLeft="@+id/buttonInformation"
        android:layout_alignStart="@+id/buttonInformation"
        android:layout_marginTop="40dp"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewSearchMenu"
        android:layout_above="@+id/buttonConsumption"
        android:layout_alignTop="@+id/buttonSearchMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonSearchMenu"
        android:layout_toStartOf="@+id/buttonSearchMenu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewConsumption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonConsumption"
        android:layout_alignTop="@+id/buttonConsumption"
        android:layout_toLeftOf="@+id/buttonConsumption"
        android:layout_above="@+id/buttonInformation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInformation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonInformation"
        android:layout_toStartOf="@+id/buttonInformation"
        android:layout_above="@+id/buttonInteresting"
        android:layout_alignTop="@+id/buttonInformation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInteresting"
        android:layout_toRightOf="@+id/buttonInteresting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonInteresting"
        android:layout_toLeftOf="@+id/buttonConsumption"
        android:layout_toStartOf="@+id/buttonConsumption"
        android:layout_alignBottom="@+id/buttonInteresting" />

</RelativeLayout>