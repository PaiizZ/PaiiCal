<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH MENU"
        android:id="@+id/textviewSearchMenu"
        android:layout_marginTop="30dp"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH CATEGORY"
        android:id="@+id/buttonSearchCategory"
        android:layout_marginTop="75dp"
        android:textSize="30dp"
        android:layout_below="@+id/textviewSearchMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewListConsumption"
        android:layout_alignBottom="@+id/buttonSearchCategory"
        android:layout_alignTop="@+id/buttonSearchCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonSearchCategory"
        android:layout_toStartOf="@+id/buttonSearchCategory" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH NAME"
        android:id="@+id/buttonSearchName"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonSearchCategory"
        android:layout_toRightOf="@+id/imageViewListConsumption"
        android:layout_toEndOf="@+id/imageViewListConsumption" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH CALORIE"
        android:id="@+id/buttonSearchCalorie"
        android:layout_below="@+id/buttonSearchName"
        android:layout_alignLeft="@+id/buttonSearchName"
        android:layout_alignStart="@+id/buttonSearchName"
        android:layout_marginTop="44dp"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInfprmation"
        android:layout_alignTop="@+id/buttonSearchName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonSearchName"
        android:layout_toStartOf="@+id/buttonSearchName"
        android:layout_alignBottom="@+id/buttonSearchName" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInterestingInfo"
        android:layout_alignBottom="@+id/buttonSearchCalorie"
        android:layout_alignTop="@+id/buttonSearchCalorie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonSearchCalorie"
        android:layout_toStartOf="@+id/buttonSearchCalorie" />

</RelativeLayout>