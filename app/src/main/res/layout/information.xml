<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTextEditMain"
        android:layout_marginTop="36dp"
        android:layout_gravity="left"
        android:textSize="20dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignRight="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle"
        android:layout_toRightOf="@+id/textViewActivity"
        android:layout_toEndOf="@+id/textViewActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Personal Information"
        android:id="@+id/textViewTitle"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:id="@+id/textviewNameMain"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/nameTextEditMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER"
        android:id="@+id/textViewGender"
        android:textSize="20dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textviewNameMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:id="@+id/textViewAge"
        android:layout_below="@+id/textViewGender"
        android:layout_alignLeft="@+id/textViewGender"
        android:layout_alignStart="@+id/textViewGender"
        android:layout_marginTop="26dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageTextEditMain"
        android:layout_alignRight="@+id/nameTextEditMain"
        android:layout_alignEnd="@+id/nameTextEditMain"
        android:textSize="20sp"
        android:layout_above="@+id/textViewWeight"
        android:layout_alignLeft="@+id/nameTextEditMain"
        android:layout_alignStart="@+id/nameTextEditMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT"
        android:id="@+id/textViewWeight"
        android:layout_below="@+id/textViewAge"
        android:layout_alignLeft="@+id/textViewAge"
        android:layout_alignStart="@+id/textViewAge"
        android:layout_marginTop="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT"
        android:id="@+id/textViewHeight"
        android:layout_below="@+id/textViewWeight"
        android:layout_alignLeft="@+id/textViewWeight"
        android:layout_alignStart="@+id/textViewWeight"
        android:layout_marginTop="27dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVITY"
        android:id="@+id/textViewActivity"
        android:layout_below="@+id/textViewHeight"
        android:layout_alignLeft="@+id/textViewHeight"
        android:layout_alignStart="@+id/textViewHeight"
        android:layout_marginTop="26dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderTextView"
        android:layout_alignTop="@+id/textViewGender"
        android:layout_alignLeft="@+id/nameTextEditMain"
        android:layout_alignStart="@+id/nameTextEditMain"
        android:layout_alignRight="@+id/nameTextEditMain"
        android:layout_alignEnd="@+id/nameTextEditMain"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightTextView"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textViewWeight"
        android:layout_alignLeft="@+id/ageTextEditMain"
        android:layout_alignStart="@+id/ageTextEditMain"
        android:layout_alignRight="@+id/ageTextEditMain"
        android:layout_alignEnd="@+id/ageTextEditMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heightTextView"
        android:textSize="20sp"
        android:layout_above="@+id/textViewActivity"
        android:layout_alignLeft="@+id/weightTextView"
        android:layout_alignStart="@+id/weightTextView"
        android:layout_alignRight="@+id/weightTextView"
        android:layout_alignEnd="@+id/weightTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityTextView"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/textViewActivity"
        android:layout_alignRight="@+id/heightTextView"
        android:layout_alignEnd="@+id/heightTextView"
        android:layout_alignLeft="@+id/heightTextView"
        android:layout_alignStart="@+id/heightTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/buttonEdit"
        android:textSize="20dp"
        android:layout_below="@+id/activityTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

</RelativeLayout>
